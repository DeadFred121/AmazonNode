h1 Make your store

h1 All Products
table
    tr
        th Name
        th Description
        th Price
        th Action
    each product in Products
        tr
            td= product.name
            td= product.description
            td= product.price
            td
                a(href='/products/delete/' + product._id) Delete
        

form(action='/products/new', method='POST')
    h1 Add a new product:
    br
    label Name:
    input(name='name' placeholder='e.g. New Hat')
    br
    label Description:
    input(name='description' placeholder='e.g. This hat is sweet!')
    br
    label Price:
    input(name='price' placeholder='e.g. $20.00')
    br
    input(type='submit')